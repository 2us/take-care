<!DOCTYPE html>
<html>
  <head>
    <title>{{title}}</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <div>

        <h1>{{ title }}</h1>

        {{#pagination}}
            <b>{{page}}</b> of {{pages}}
        {{/pagination}}

        {{# errors }}
            <div class="errors">
                <div class="error">
                    <h2>{{message}}</h2>
                    <div>
                        {{url}}
                        {{#line}}
                            at {{line}}{{#symbol}}:{{symbol}}{{/symbol}}
                        {{/line}}
                    </div>
                    <div>
                        <small>{{datetime}}</small>
                    </div>
                </div>
            </div>
        {{/ errors }}</div>
  </body>
</html>