<!DOCTYPE html>
<html>
  <head>
    <title>{{title}}</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <div>
        <h1>{{ title }}</h1>

        {{#pagination}}
            Page <b>{{page}}</b> of {{pages}}
        {{/pagination}}

        <ul class="periods">
            {{#periods}}
                <li class="filter{{#active}} active{{/active}}">{{title}}</li>
            {{/periods}}

            {{^periods}}
                <li>No periods</li>
            {{/periods}}
        </ul>

        {{#errors}}
            <div class="errors">
                <div class="error">
                    <h2>{{#fake}}[fake] {{/fake}}{{message}}</h2>
                    <div>
                        {{url}}
                        {{#line}}
                            at {{line}}{{#symbol}}:{{symbol}}{{/symbol}}
                        {{/line}}
                    </div>
                    <div>
                        <small>{{datetime}}</small>
                    </div>
                </div>
            </div>
        {{/errors}}

        {{^errors}}
            No data yet
        {{/errors}}
    </div>
  </body>
</html>