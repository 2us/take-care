<!DOCTYPE html>
<html>
<head>
    <title>{{title}}</title>

    <meta name = "viewport" content = "initial-scale = 1, user-scalable = no">

    <link rel="shortcut icon" href="/images/favicon.ico" type="image/x-icon">
    <link rel='stylesheet' href='/stylesheets/style.css' />

</head>
<body>
    <div>
        <a href="/">Take care</a>

        <h1>{{title}}</h1>

        <div>
            {{#errorLog}}
                {{> error}}
            {{/errorLog}}
        </div>

        <canvas id="browsersChart" height="200" width="200"></canvas>

        <hr />

        <h3>History</h3>

        <div>{{> pagination}}</div>

        <div>
            {{^errors}}
                No errors
            {{/errors}}
            {{#errors}}
                {{> error}}
            {{/errors}}
        </div>

        <div>{{> pagination}}</div>
    </div>

    {{> pagination-script}}

    <script src="/components/regaddi_chartjs/Chart.js"></script>
    <script>
        var ctx = document.getElementById("browsersChart").getContext("2d"),
            pieOptions = {
                segmentShowStroke: true,
                segmentStrokeColor: 'black',
                segmentStrokeWidth: 1,
                animation: false
            },
            pieData = [];

        {{#errorLog}}
            pieData = {{{pieData}}};
        {{/errorLog}}

        this.browsersChart = new Chart(ctx).Pie(pieData, pieOptions);
    </script>
</body>
</html>