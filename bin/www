#!/usr/bin/env node
var debug = require('debug')('my-application');
var app = require('../app'),
    env = app.get('env'),
    ff = require('../helpers/ff'),
    conf;

if (env === 'development') {
    env = '';
}
conf = require('../conf' + ((env) ? '.' + env : ''));

app.set('port', process.env.PORT || conf.app.port || 3000);

var server = app.listen(app.get('port'), function() {
    var message = 'Express server listening on port ' + server.address().port;

    ff('print_port_on_start') && console.log(message);
    debug(message);
});
